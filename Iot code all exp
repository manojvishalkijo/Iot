float temp;
float vout;
float resistor;
float vout1;
int LED = 13;
int gasSensor;
int piezo = 7;
void setup()
{pinMode(12,OUTPUT);
 pinMode(11,OUTPUT);
pinMode (A0, INPUT);
pinMode(A1, INPUT);
pinMode(LED,OUTPUT);
pinMode(piezo,OUTPUT);
pinMode(A2,INPUT);

Serial.begin(9600);
}
void loop()
{resistor = analogRead(A2);
 if (resistor<=350)
 {digitalWrite(12,HIGH);}
 else{digitalWrite(12,LOW);}
vout=analogRead(A0);
vout1=(vout/1023)*5000;
temp=(vout1-500)/10;
gasSensor=analogRead(A1);
if (temp>=25)
{digitalWrite(11,HIGH);} 
 else{digitalWrite(11,LOW);}
if(temp>=80 &&  gasSensor>=100)
{
digitalWrite(LED,HIGH);
digitalWrite(piezo,HIGH);  
}
else
{
digitalWrite(LED,LOW);
digitalWrite(piezo,LOW);  
}
Serial.print(resistor);
Serial.print("in DegreeC= ");
Serial.print(" ");
Serial.print(temp);
Serial.print("\t");
Serial.print("GasSensor= ");
Serial.print(" ");
Serial.print(gasSensor);
Serial.println();
delay(1000);
}




